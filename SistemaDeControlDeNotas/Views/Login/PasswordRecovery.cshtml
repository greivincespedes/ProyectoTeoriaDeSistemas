
@{
    Layout = null;
}

<!DOCTYPE html>

<head>
    <title>Recuperar contraseña</title>

    <!--JQUERY-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- FRAMEWORK BOOTSTRAP para el estilo de la pagina -->

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Los iconos tipo Solid de Fontawesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
    <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>

    <!--css-->
    <link href="~/css/index.css" rel="stylesheet" />

</head>

<html>
<body>

    <div class="modal-dialog text-center">
        <div class="col-sm-8 main-section">
            <div class="modal-content">
                <div class="col-12 user-img">
                    <img src="~/img/usermodify.png" />
                </div>
                <div class="dropdown mb-3">

                    <form class="col-12" action="recoverPassword" method="post">
                        <div>
                            @Html.TextBox("Correo", null, new { @class = "form-control", @placeholder = "Correo electronico", @Title = "Correo electronico" })
                            <button type="submit" class="btn btn-primary">  Enviar contraseña </button>
                        </div>

                        <div class="col-12 forgot">
                            @Html.ActionLink("Regresar", "Login", null, new { @class = "nav-link" })
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>

</body>
</html>
